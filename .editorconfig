# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

# General config
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.js]
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[*.xml]
indent_style = tab

[*.html]
end_of_line = crlf
indent_style = tab

