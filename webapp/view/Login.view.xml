<mvc:View
	controllerName="sap.ui.user.management.system.controller.Login"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="{i18n>title}" titleAlignment="Center">
		<content>

			<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
				<items>
					<Input id="loginNameID" placeholder="{i18n>login}"/>
					<Input id="loginNamePassword" placeholder="{i18n>password}"/>
					<Button text="{i18n>loginButtonText}" width="12rem" type="Emphasized" press="onLoginTap"/>
				</items>
			</VBox>
		</content>
	</Page>
</mvc:View>